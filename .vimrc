set nocompatible

let mapleader = " "
let maplocalleader = "\\"
inoremap jk <ESC>

syntax on
set encoding=utf-8
set number
set relativenumber
set clipboard^=unnamedplus
set mouse=a
set ruler
set hidden
set background=dark

set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch

set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
